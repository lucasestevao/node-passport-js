<% include header %>
<div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span> Profile Page</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <h3><span class="fa fa-user"></span> Local</h3>

                <% if (user.local.email) { %>
                    <p>
                        <strong>id</strong>: <%= user._id %><br>
                        <strong>email</strong>: <%= user.local.email %><br>
                        <strong>password</strong>: <%= user.local.password %>
                    </p>

                    <a href="/unlink/local" class="btn btn-default">Unlink</a>
                <% } else { %>
                    <a href="/connect/local" class="btn btn-default">Connect Local</a>
                <% } %>

            </div>
        </div>

        <!-- FACEBOOK INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <h3 class="text-primary"><span class="fa fa-facebook"></span> Facebook</h3>

                <!-- check if the user has this token (is the user authenticated with this social account) -->
                <% if (user.facebook.token) { %>
                    <p>
                        <strong>id</strong>: <%= user.facebook.id %><br>
                        <strong>token</strong>: <%= user.facebook.token %><br>
                        <strong>email</strong>: <%= user.facebook.email %><br>
                        <strong>name</strong>: <%= user.facebook.name %><br>
                    </p>

                    <a href="/unlink/facebook" class="btn btn-primary">Unlink</a>
                <% } else { %>
                    <a href="/connect/facebook" class="btn btn-primary">Connect Facebook</a>
                <% } %>

            </div>
        </div>
    </div>
    <div class="row">

        <!-- TWITTER INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <h3 class="text-info"><span class="fa fa-twitter"></span> Twitter</h3>

                <% if (user.twitter.token) { %>
                    <p>
                        <strong>id</strong>: <%= user.twitter.id %><br>
                        <strong>token</strong>: <%= user.twitter.token %><br>
                        <strong>display name</strong>: <%= user.twitter.displayName %><br>
                        <strong>username</strong>: <%= user.twitter.username %>
                    </p>

                    <a href="/unlink/twitter" class="btn btn-info">Unlink</a>
                <% } else { %>
                    <a href="/connect/twitter" class="btn btn-info">Connect Twitter</a>
                <% } %>

            </div>
        </div>

        <!-- GOOGLE INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <h3 class="text-danger"><span class="fa fa-google-plus"></span> Google+</h3>

                <% if (user.google.token) { %>
                    <p>
                        <strong>id</strong>: <%= user.google.id %><br>
                        <strong>token</strong>: <%= user.google.token %><br>
                        <strong>email</strong>: <%= user.google.email %><br>
                        <strong>name</strong>: <%= user.google.name %>
                    </p>

                    <a href="/unlink/google" class="btn btn-danger">Unlink</a>
                <% } else { %>
                    <a href="/connect/google" class="btn btn-danger">Connect Google</a>
                <% } %>

            </div>
        </div>
    </div>
    <div class="row">

        <!-- LINKEDIN INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <h3 class="text-success"><span class="fa fa-linkedin"></span> LinkedIn</h3>

                <% if (user.linkedin.token) { %>
                    <p>
                        <strong>id</strong>: <%= user.linkedin.id %><br>
                        <strong>token</strong>: <%= user.linkedin.token %><br>
                        <strong>email</strong>: <%= user.linkedin.email %><br>
                        <strong>name</strong>: <%= user.linkedin.name %><br>
                        <strong>headline</strong>: <%= user.linkedin.headline %>
                    </p>

                    <a href="/unlink/linkedin" class="btn btn-success">Unlink</a>
                <% } else { %>
                    <a href="/connect/linkedin" class="btn btn-success">Connect LinkedIn</a>
                <% } %>

            </div>
        </div>

        <!-- BITBUCKET INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <h3 class="text-default"><span class="fa fa-bitbucket"></span> Bitbucket</h3>

                <% if (user.bitbucket.token) { %>
                    <p>
                        <strong>id</strong>: <%= user.bitbucket.id %><br>
                        <strong>token</strong>: <%= user.bitbucket.token %><br>
                        <strong>name</strong>: <%= user.bitbucket.name %><br>
                        <strong>username</strong>: <%= user.bitbucket.username %>
                    </p>

                    <a href="/unlink/bitbucket" class="btn btn-default">Unlink</a>
                <% } else { %>
                    <a href="/connect/bitbucket" class="btn btn-default">Connect Bitbucket</a>
                <% } %>

            </div>
        </div>
    </div>
    <div class="row">

        <!-- INSTAGRAM INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <h3 class="text-warning"><span class="fa fa-instagram"></span> Instagram</h3>

                <% if (user.instagram.token) { %>
                    <p>
                        <strong>id</strong>: <%= user.instagram.id %><br>
                        <strong>token</strong>: <%= user.instagram.token %><br>
                        <strong>name</strong>: <%= user.instagram.name %><br>
                        <img src="<%= user.instagram.picture %>" alt="Instagram profile picture."/>
                    </p>

                    <a href="/unlink/instagram" class="btn btn-warning">Unlink</a>
                <% } else { %>
                    <a href="/connect/instagram" class="btn btn-warning">Connect Instagram</a>
                <% } %>

            </div>
        </div>

        <!-- EVERNOTE INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <h3 class="text-success">Evernote</h3>

                <% if (user.evernote.token) { %>
                    <p>
                        <strong>id</strong>: <%= user.evernote.id %><br>
                        <strong>token</strong>: <%= user.evernote.token %><br>
                    </p>

                    <a href="/unlink/evernote" class="btn btn-success">Unlink</a>
                <% } else { %>
                    <a href="/connect/evernote" class="btn btn-success">Connect Evernote</a>
                <% } %>

            </div>
        </div>

    </div>

    <div class="row">

        <!-- DROPBOX INFORMATION -->
        <div class="col-sm-6">
            <div class="well">
                <h3 class="text-info"><span class="fa fa-dropbox"></span> Dropbox</h3>

                <% if (user.dropbox.token) { %>
                    <p>
                        <strong>id</strong>: <%= user.dropbox.id %><br>
                        <strong>token</strong>: <%= user.dropbox.token %><br>
                        <strong>name</strong>: <%= user.dropbox.name %><br>
                    </p>

                    <a href="/unlink/dropbox" class="btn btn-info">Unlink</a>
                <% } else { %>
                    <a href="/connect/dropbox" class="btn btn-info">Connect Dropbox</a>
                <% } %>

            </div>
        </div>

    </div>
    <% include footer %>